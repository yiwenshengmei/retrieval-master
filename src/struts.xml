<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.multipart.maxSize" value="10485760"/>
	
	<package name="node" extends="json-default">
		<interceptors>
			<interceptor name="permission" class="com.zj.retrieval.master.interceptors.PermissionInterceptor"/>
			<interceptor-stack name="permissionStack">
<!-- 				<interceptor-ref name="permission"/> -->
				<interceptor-ref name="paramsPrepareParamsStack"/>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="permissionStack"/>
		
		<action name="node/*" class="com.zj.retrieval.master.actions.NodeAction" method="{1}">
			<result name="success">/common-message.jsp</result>
			<result name="error">/common-message.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="showNode">/view_node_detail.jsp</result>
			<result name="jsonResult" type="json">
				<param name="root">dataMap</param>
				<param name="excludeProperties">.*Files</param>
			</result>
			<result name="viewDetail" type="redirect">/view_node_detail.jsp?node_id=${id}</result>
		</action>
		
		<action name="feature/*" class="com.zj.retrieval.master.actions.FeatureAction" method="{1}">
			<result name="success">/common-message.jsp</result>
			<result name="error">/common-message.jsp</result>
			<result name="login">/login.jsp</result>
			<result name="jsonResult" type="json">
				<param name="root">dataMap</param>
				<param name="excludeProperties">.*Files</param>
			</result>
		</action>
	</package>
	
	<package name="user" extends="json-default">
		<action name="user/*" class="com.zj.retrieval.master.actions.UserAction" method="{1}">
			<result name="success">/common-message.jsp</result>
			<result name="error">/common-message.jsp</result>
			<result name="jsonRet" type="json"/>
		</action>
	</package>
	
	<package name="upload" namespace="/file" extends="struts-default">
		<action name="upload" class="com.zj.retrieval.master.actions.UploadAction" method="execute">
			<result name="success">/common-message.jsp</result>
			<result name="error">/common-message.jsp</result>
		</action>
	</package>
</struts>
