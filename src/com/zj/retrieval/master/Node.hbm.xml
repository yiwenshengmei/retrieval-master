<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.zj.retrieval.master.Node" table="T_NODE">
		<id name="id" type="java.lang.String">
			<column name="`ID`" />
			<generator class="uuid" />
		</id>
		<property name="name" column="`NAME`" type="java.lang.String" />
		<property name="englishName" column="`NAME_EN`" type="java.lang.String" />
		<property name="desc" column="`DESC`" type="java.lang.String" />
		<property name="label" column="`LABEL`" type="java.lang.String" />
		<property name="uri" column="`URI`" type="java.lang.String" />
		<property name="uriName" column="`URI_NAME`" type="java.lang.String" />
		<property name="authorContact" column="`AUTHOR_CONTACT`" type="java.lang.String" />
		<many-to-one name="parentNode" column="`PARENT_ID`" />
		<bag name="images" cascade="all" inverse="true">
			<key column="`NODE_ID`" />
			<one-to-many class="com.zj.retrieval.master.NodeImage" />
		</bag>
		<list name="attributes" cascade="all-delete-orphan" inverse="false">
			<key column="`NODE_ID`" />
			<list-index column="`ATTR_INDEX`" />
			<one-to-many class="com.zj.retrieval.master.NodeAttribute" />
		</list>
		<list name="childNodes" cascade="all-delete-orphan">
			<key column="`PARENT_ID`" not-null="false" />
			<list-index column="`CHILD_INDEX`" />
			<one-to-many class="com.zj.retrieval.master.Node" />
		</list>
		<bag name="featuresOfParent" table="T_FEATURES_PARENT_NODE">
			<key column="NODE_ID" />
			<many-to-many class="com.zj.retrieval.master.NodeFeature" column="FEATURE_ID" />
		</bag>
		<one-to-one name="retrievalDataSource" property-ref="node"
			cascade="all" />
	</class>
</hibernate-mapping>